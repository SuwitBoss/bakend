# Database Configuration
# For local development
DATABASE_URL=postgresql://facesocial:password@localhost:5432/facesocial
# For Docker environment
# DATABASE_URL=postgresql://facesocial:password@postgres:5432/facesocial

# Redis Configuration
# For local development
REDIS_URL=redis://localhost:6379
# For Docker environment
# REDIS_URL=redis://redis:6379

# Security
SECRET_KEY=your-very-secret-key-change-this-in-production-please
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings
# Add all frontend URLs that will access the API
ALLOWED_HOSTS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001","http://127.0.0.1:3001","http://facesocial_frontend:3000"]

# Environment
ENVIRONMENT=development
DEBUG=true

# File Upload
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=uploads

# AI Models (for Phase 3)
# For local development
MODELS_PATH=../models
# For Docker environment
# MODELS_PATH=/app/model
VRAM_LIMIT_MB=6144
